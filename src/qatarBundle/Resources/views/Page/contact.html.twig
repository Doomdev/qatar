{% extends "qatarBundle::layout.html.twig" %}

{% block title %}CONTACT{% endblock %}
   {% block header %}

       {% include '@qatar/header.html.twig' with {h1: 'SERVICE AUTOMOBILE'} only %}


   {% endblock header %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-12" >
                <img src="{{ asset('image/telephone-main4.png') }}" alt="Inscription" height="" width="">
            </div>

            <div class="col-md-7 col-sm-12" id="sliderstatic">

                {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

                <div class="col-md-5 col-sm-12" id="forme">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-md-5">
                            {{ form_errors(form.nom) }}
                            {{ form_widget(form.nom) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.prenom, 'Prenom:', { 'label_attr': {'class': 'col-lg-3 control-label'} }) }}
                        <div class="col-md-5">
                            {{ form_errors(form.prenom) }}
                            {{ form_widget(form.prenom) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.societe, 'Societe:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-5">
                            {{ form_errors(form.societe) }}
                            {{ form_widget(form.societe) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.adresse, 'Adresse:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-5">
                            {{ form_errors(form.adresse) }}
                            {{ form_widget(form.adresse) }}
                        </div>
                    </div>

                    <div class="form-group">

                        {{ form_label(form.telephone,'Telephone:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-5">
                            {{ form_errors(form.telephone) }}
                            {{ form_widget(form.telephone) }}
                        </div>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-4">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-sm-12" id="forme">
                    <div class="form-group">

                        {{ form_label(form.description, 'Description:', { 'label_attr': {'class': 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-4">
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description) }}
                        </div>
                    </div>
                    {{ form_widget(form.validate, { 'attr': {'class': 'btn btn-default'} }) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}